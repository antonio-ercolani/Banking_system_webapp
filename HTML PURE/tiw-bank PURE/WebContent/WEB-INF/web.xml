<?xml version="1.0" encoding="UTF-8" ?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
	<display-name>tiw-bank</display-name>
	<context-param>
		<param-name>dbUrl</param-name>
		<param-value>jdbc:mysql://localhost:3306/bankdb</param-value>
	</context-param>
	<context-param>
		<param-name>dbUser</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>Ciccio1234</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<filter>
		<filter-name>LoginChecker</filter-name>
		<filter-class>it.polimi.tiw.projects.filters.LoginChecker</filter-class>
	</filter>
	<filter>
		<filter-name>AccountChecker</filter-name>
		<filter-class>it.polimi.tiw.projects.filters.AccountChecker</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginChecker</filter-name>
		<url-pattern>/GoToHomePage</url-pattern>
		<url-pattern>/CheckOwnership</url-pattern>
		<url-pattern>/CheckTransfer</url-pattern>
		<url-pattern>/GoToAccountInfo</url-pattern>
		<url-pattern>/GoToErrorPage</url-pattern>
		<url-pattern>/GoToSummaryPage</url-pattern>
	</filter-mapping>
		<filter-mapping>
		<filter-name>AccountChecker</filter-name>
		<url-pattern>/CheckTransfer</url-pattern>
		<url-pattern>/GoToAccountInfo</url-pattern>
		<url-pattern>/GoToErrorPage</url-pattern>
		<url-pattern>/GoToSummaryPage</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>